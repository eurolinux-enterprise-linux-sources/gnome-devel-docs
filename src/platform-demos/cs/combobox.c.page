  <p>Tento rozbalovací seznam vypisuje změnu svého stavu do terminálu.</p>

      <code mime="text/x-csrc" style="numbered">
#include &lt;gtk/gtk.h&gt;

/* Toto je funkce zpětného volání. Jedná se o zpracující funkci, která 
 * reaguje na signál. V tomto případě, když vybraný řádek není prvním 
 * řádkem v seznamu, vypíšem uživateli jeho hodnotu do terminálu.
 */
static void
on_changed (GtkComboBox *widget,
            gpointer   user_data)
{
  GtkComboBox *combo_box = widget;

  if (gtk_combo_box_get_active (combo_box) != 0) {
    gchar *distro = gtk_combo_box_text_get_active_text (GTK_COMBO_BOX_TEXT(combo_box));
    g_print ("You chose %s\n", distro);
    g_free (distro);
  }

}


static void
activate (GtkApplication *app,
          gpointer        user_data)
{
  gint i;
  GtkWidget *view;
  GtkWidget *window;
  GtkWidget *combo_box;

  /* Vytvoří okno s názvem, šířkou okraje a výchozí velikostí. Nastavení 
   * velikosti na -1 znamená, že se má použít „přirozená“ výchozí velikost.
   * (velikost požadovaná oknem)
   */
  window = gtk_application_window_new (app);
  gtk_window_set_title (GTK_WINDOW (window), "Welcome to GNOME");
  gtk_window_set_default_size (GTK_WINDOW (window), 200, -1);
  gtk_container_set_border_width (GTK_CONTAINER (window), 10);


  /* Vytvoří rozbalovací seznam a připojí do něj řetězcové hodnoty. */
  combo_box = gtk_combo_box_text_new ();
  const char *distros[] = {"Select distribution", "Fedora", "Mint", "Suse"};

 
  /* G_N_ELEMENTS je makro, které určuje počet prvků v poli. */ 
  for (i = 0; i &lt; G_N_ELEMENTS (distros); i++){
  	gtk_combo_box_text_append_text (GTK_COMBO_BOX_TEXT (combo_box), distros[i]);
  }

  /* Zvolí, že chceme ve výchozím stavu nastavit jako aktivní první řádek od začátku */
  gtk_combo_box_set_active (GTK_COMBO_BOX (combo_box), 0);

  /* Připojí signál, který je vyslán při výběru řádku, k příslušné 
   * funkci zpětného volání.
   */
  g_signal_connect (combo_box,
                    "changed",
                    G_CALLBACK (on_changed),
                    NULL);

  /* Přidá rozbalovací seznam do okna */
  gtk_container_add (GTK_CONTAINER (window), combo_box);

  gtk_widget_show_all (window);
}


int
main (int argc, char **argv)
{
  GtkApplication *app;
  int status;

  app = gtk_application_new ("org.gtk.example", G_APPLICATION_FLAGS_NONE);
  g_signal_connect (app, "activate", G_CALLBACK (activate), NULL);
  status = g_application_run (G_APPLICATION (app), argc, argv);
  g_object_unref (app);

  return status;
}
